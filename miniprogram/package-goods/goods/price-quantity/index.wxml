<view class="price-quantity">
  <view class="price-wrapper" bind:tap="handleClickPrice">
    <price class="price salePrice" priceUnit="yuan" price="{{ salePrice }}" />
    <price
      wx:if="{{ salePrice !== originalPrice }}"
      class="price originalPrice"
      priceUnit="yuan"
      price="{{ originalPrice }}"
      type="delthrough"
    />
    <view wx:if="{{ salePrice !== originalPrice }}" class="priceLabel">{{ priceLabel }}</view>
  </view>
  <t-stepper
    wx:if="{{ !readonly }}"
    size="medium"
    theme="outline"
    max="{{ originalQuantity }}"
    value="{{ saleQuantity }}"
    bind:change="handleUpdateSaleQuantity"
  />
  <view wx:if="{{ readonly }}" class="quantity"> 共 {{ saleQuantity }} 件 </view>
</view>
