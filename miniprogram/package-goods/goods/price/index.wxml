<wxs src="./index.wxs" module="utils" />
<view class="price {{type}}">
  <view
    wx:if="{{type === 'delthrough'}}"
    class="line"
    style="height:{{utils.addUnit(lineThroughWidth)}};"
  />
  <view class="symbol">{{symbol}}</view>

  <view class="pprice">
    <view class="integer">{{prices.integer}}</view>
    <view wx:if="{{prices.decimal}}" class="decimal {{decimalSmaller ? 'smaller' : ''}}"
      >.{{prices.decimal }}
    </view>
  </view>
</view>
