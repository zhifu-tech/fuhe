.container {
  width: 100vw;
  box-sizing: border-box;
  height: 80vh;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  flex: none;
  align-items: center;
  height: 116rpx;
  padding: 0 var(--td-spacer-2) 0;
}
.header .title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-family: var(--td-font-family-medium);
  font-size: var(--td-font-size-m);
  color: var(--td-text-color-primary);
}

.section {
  display: flex;
  flex: none;
  flex-direction: column;
  justify-content: center;
}

.label-container {
  height: 70rpx;
  display: inline-flex;
  align-items: center;
}
.label-container .label {
  font-size: var(--td-font-size-base);
  color: var(--td-text-color-primary);
  margin-left: var(--td-spacer-2);
}
.label-container .icon {
  size: 48rpx;
  margin-left: var(--td-spacer-1);
  padding: var(--td-spacer-1) 0 var(--td-spacer-1) var(--td-spacer-1);
}
.label-container-sub {
  margin-left: var(--td-spacer-2);
}
.input {
  margin-left: var(--td-spacer-2);
}
.specs {
  flex: 1;
  overflow: auto; /* 确保内容超出时可滚动 */
}
.options {
  display: flex;
  flex-wrap: wrap;
  margin-left: var(--td-spacer-4);
}
.option {
  margin: var(--td-spacer);
}
.divider {
  margin-left: var(--td-spacer-3);
}
