.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--td-bg-color-page);
  font-size: var(--td-font-size-m);
}

.content {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.scroll {
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  height: auto !important;
  margin-bottom: calc(70px + env(safe-area-inset-bottom));
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.card {
  flex-shrink: 0;
  margin: var(--td-spacer-2);
  margin-bottom: 0;
  border-radius: var(--td-radius-large);
  overflow: hidden;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: var(--td-spacer-2);
  background-color: var(--td-bg-color-container);
}
.card-content .number {
  font-size: var(--td-font-size-xxl);
  color: var(--td-color-primary);
}

.income-tags {
  background-color: var(--td-bg-color-container);
  padding: var(--td-spacer-2);
  padding-bottom: var(--td-spacer);
}

.canvas-wrapper {
  background-color: var(--td-bg-color-container);
  height: 350px;
  width: 100%;
}

.canvas {
  width: 100%;
  height: 100%;
}
