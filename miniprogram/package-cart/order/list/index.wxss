.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--td-bg-color-page);
  font-size: var(--td-font-size-m);
}
.search {
}

.tabs {
}

.content {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.sk,
.scroll,
.empty {
  position: absolute;
  margin-bottom: calc(60px + env(safe-area-inset-bottom));
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.scroll {
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  /* height: unset !important; */
  /* max-height: unset !important; */
  z-index: 1;
}

.empty {
  margin-bottom: calc((60px + env(safe-area-inset-bottom)) * 2);
  justify-content: center;
  z-index: 2;
}

.sk {
  background-color: var(--td-bg-color-page);
  position: absolute;
  width: 100%;
  z-index: 99;
}

.order {
  display: flex;
  flex-direction: column;
  margin: var(--td-spacer-1);
  border-radius: var(--td-radius-large);
  background-color: var(--td-bg-color-container);
}
.row {
  display: inline-flex;
  flex-wrap: wrap;
  line-height: 48rpx;
  gap: var(--td-spacer-1);
}
.padding-h {
  padding-left: var(--td-spacer-2);
  padding-right: var(--td-spacer-2);
}
.padding-left {
  padding-left: var(--td-spacer-2);
}
.padding-top {
  padding-top: var(--td-spacer-2);
}
.padding-bottom {
  padding-bottom: var(--td-spacer-2);
}

.customer,
.provider,
.date {
  flex-shrink: 0;
  font-size: var(--td-font-size-base);
  color: var(--td-text-color-secondary);
}
.row.actions {
  justify-content: flex-end;
  padding: var(--td-spacer-2);
}
.action {
  flex: 0 0 auto;
}

.label {
  flex-shrink: 0;
  font-size: var(--td-font-size-base);
  color: var(--td-text-color-secondary);
}

.divider-custom {
  margin-top: 1rxp;
  margin-bottom: 1rpx;
}
