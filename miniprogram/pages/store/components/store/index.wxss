.store-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.store-page-header {
  flex: none;
}
.store-page-container {
  display: flex;
  flex: 1;
}
.store-page-container .side-bar {
  --td-side-bar-width: 150rpx;
  --td-side-bar-height: 100%;
  /*  应该是获取到tabbar的高度+修正的距离。 */
  padding-bottom: 60px;
}
.store-page-container .store-page-content {
  flex: auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.store-page-content .custom-tabs {
  width: 100%;
  flex: none;
  background-color: white;
}

.store-page-content .goods-container {
}
.goods-item-container {
  margin: 30rpx 10rpx;
  border-radius: var(--td-radius-large, 18rpx);
  background-color: #f5f5f5;
}

.goods-item-name {
  font-size: 28rpx;
  font-weight: 500;
}
