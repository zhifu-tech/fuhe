.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--td-bg-color-page);
}
.navbar {
  --td-navbar-height: 66px !important;
}
.navbar-left {
  overflow: hidden;
}

.header {
  --td-cell-vertical-padding: 0rpx;
  --td-cell-horizontal-padding: 0rpx;
}
.header-center {
  overflow: hidden;
}
.header-description {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.header-avatar-image {
  --td-avatar-bg-color: var(--td-bg-color-secondarycontainer);
}

.search {
  padding: var(--td-spacer-2) var(--td-spacer-1) 0 var(--td-spacer-1);
  --td-search-bg-color: var(--td-bg-color-container);
}

.content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

.display-none {
  display: none;
}

.side-bar-wrapper {
  width: 120rpx;
  padding-bottom: calc(60px + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
}
.side-bar-wrapper.show {
  display: flex;
}
.side-bar-wrapper.hide {
  display: none;
}

.side-bar-actions {
  display: flex;
  width: 120rpx;
  flex-direction: column;
  justify-content: center;
  font-size: var(--td-font-size-base);
  background-color: var(--td-bg-color-container);
}
.side-bar-action {
  flex-shrink: 0;
  padding: var(--td-spacer-2) var(--td-spacer);
  text-align: center;
  font-size: var(--td-font-size-base);
}

.side-bar {
  flex: 1;
  flex-shrink: 0;
  --td-side-bar-font-size: var(--td-font-size-base);
  --td-side-bar-width: 120rpx;
  --td-side-bar-bg-color: var(--td-bg-color-container);
}
.side-bar-item {
  flex-shrink: 0;
  padding: var(--td-spacer-2) 0rpx;
  text-align: center;
}
.side-bar-item.active {
  /* background: var(--td-bg-color-secondarycontainer); */
  background: var(--td-bg-color-page);
}
/* TRICKY: 通过直接覆盖的方式,调整sidebar的样式，在active时，通过before增加一个背景 */
.t-side-bar-item__suffix::before,
.t-side-bar-item__prefix::before {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  background-color: var(--td-bg-color-page);
}
.t-side-bar-item__suffix::before,
.t-side-bar-item__prefix::before,
.t-side-bar-item__suffix::after,
.t-side-bar-item__prefix::after {
  position: absolute;
}

.content-container {
  flex: 1;
  position: relative;
}
.sk,
.scroll,
.empty {
  position: absolute;
  margin-bottom: calc(60px + env(safe-area-inset-bottom));
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.scroll {
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  height: unset !important;
  max-height: unset !important;
  z-index: 1;
}
.empty {
  margin-bottom: calc((60px + env(safe-area-inset-bottom)) * 2);
  justify-content: center;
  z-index: 2;
}
.sk {
  background-color: var(--td-bg-color-page);
  position: absolute;
  width: 100%;
  z-index: 99;
}

.sk-goods-container {
  display: flex;
  flex-direction: column;
  margin: var(--td-spacer-1);
  padding: var(--td-spacer-1) var(--td-spacer-1) var(--td-spacer-3) var(--td-spacer-1);
  border-radius: var(--td-radius-large);
  background-color: var(--td-bg-color-container);
}
.sk-goods-header {
  display: flex;
}

.sk-goods-header-right {
  flex: 1;
  margin-left: var(--td-spacer);
}
