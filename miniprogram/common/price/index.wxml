<wxs src='./index.wxs'
  module="utils" />
<view class="price {{type}} wr-class">
  <view wx:if="{{type === 'delthrough'}}"
    class="line"
    style="height:{{utils.addUnit(lineThroughWidth)}};" />
  <view class="symbol symbol-class">{{symbol}}</view>
  <view class="pprice">
    <view class="integer">{{pArr[0]}}</view>
    <view wx:if="{{pArr[1]}}"
      class="decimal {{decimalSmaller ? 'smaller' : ''}} decimal-class">.{{pArr[1]}}</view>
  </view>
</view>
